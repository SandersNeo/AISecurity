{
  "name": "sentinel-devkit",
  "displayName": "SENTINEL DevKit",
  "description": "Agent-first development toolkit for SENTINEL AI Security Platform",
  "version": "0.2.0",
  "publisher": "sentinel",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sentinel-devkit.openPanel",
        "title": "DevKit: Open Dashboard",
        "category": "SENTINEL"
      },
      {
        "command": "sentinel-devkit.showKanban",
        "title": "DevKit: Show Kanban Board",
        "category": "SENTINEL"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sentinel-devkit",
          "title": "SENTINEL DevKit",
          "icon": "resources/devkit-icon.svg"
        }
      ]
    },
    "views": {
      "sentinel-devkit": [
        {
          "type": "webview",
          "id": "sentinel-devkit.dashboard",
          "name": "Dashboard"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "node ./out/test/runTest.js",
    "test:unit": "mocha --require ts-node/register src/**/*.test.ts",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.54.0",
    "glob": "^13.0.0",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "@types/uuid": "^10.0.0",
    "uuid": "^13.0.0"
  }
}
